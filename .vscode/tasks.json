{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Scan Build",
            "type": "shell",
            "command": "rm -rf /build/ScanBuild && scan-build cmake -D CMAKE_BUILD_TYPE=Debug -B /build/ScanBuild -S /libevpl -G Ninja && scan-build -o /build/ScanReport ninja -C /build/ScanBuild",
            "options": {
                "env": {
                    "LC_ALL": "C",
                }
            },
            "group": "build",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}